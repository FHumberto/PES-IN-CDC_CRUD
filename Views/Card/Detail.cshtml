@model CDC.Models.Card;

@{
    ViewData["Title"] = "Informações da Carta";
    var isFoil = (Model.IsFoil) ? "Sim" : "Não";
}

<h2>@ViewData["Title"]</h2>

<p>Aqui são exibidas as informações completas da carta</p>

<hr class="hr" />

<div class="d-flex">
    @if(Model.Img != null)
    {
        <img style="height:400px" src="@Model.Img" alt="Capa" />
    }
    <div class="flex-fill">
        <dl class="row my-1">
            <dt class="col-sm-2 text-end bg-dark bg-opacity-10">@Html.DisplayNameFor(model => model.Color)</dt>
            <dd class="col-sm-10 fw-bold">@Html.DisplayFor(model => model.Color)</dd>
        </dl>
        <dl class="row my-1">
            <dt class="col-sm-2 text-end bg-dark bg-opacity-10">@Html.DisplayNameFor(model => model.Type)</dt>
            <dd class="col-sm-10 fw-bold">@Html.DisplayFor(model => model.Type)</dd>
        </dl>
        <dl class="row my-1">
            <dt class="col-sm-2 text-end bg-dark bg-opacity-10">@Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-10 fw-bold">@Html.DisplayFor(model => model.Name)</dd>
        </dl>
        <dl class="row my-1">
            <dt class="col-sm-2 text-end bg-dark bg-opacity-10">@Html.DisplayNameFor(model => model.Set)</dt>
            <dd class="col-sm-10 fw-bold">@Html.DisplayFor(model => model.Set)</dd>
        </dl>
        <dl class="row my-1">
            <dt class="col-sm-2 text-end bg-dark bg-opacity-10">@Html.DisplayNameFor(model => model.IsFoil)</dt>
            <dd class="col-sm-10 fw-bold">@isFoil</dd>
        </dl>
        <dl class="row my-1">
            <dt class="col-sm-2 text-end  bg-dark bg-opacity-10">@Html.DisplayNameFor(model => model.Condition)</dt>
            <dd class="col-sm-10 fw-bold">@Html.DisplayFor(model => model.Condition)</dd>
        </dl>
        <dl class="row my-1">
            <dt class="col-sm-2 text-end bg-dark bg-opacity-10">@Html.DisplayNameFor(model => model.Quantity)</dt>
            <dd class="col-sm-10 fw-bold">@Html.DisplayFor(model => model.Quantity)</dd>
        </dl>
    </div>
</div>

<hr class="hr" />

<div>
    <a class="btn btn-outline-secondary" asp-action="Index">Voltar para a Lista</a>
</div>
